{
    "config": {
        "verbosity": "normal"
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": [],
                "conditions": []
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\File\\Action\\DoesNotContainRegex",
                "options": {
                  "regex": "#var_dump#i",
                  "fileExtensions": [
                    "inc",
                    "php"
                  ]
                }
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\File\\Action\\DoesNotContainRegex",
                "options": {
                  "regex": "#debug#i",
                  "fileExtensions": [
                    "html"
                  ]
                }
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\File\\Action\\DoesNotContainRegex",
                "options": {
                  "regex": "#log#i",
                  "fileExtensions": [
                    "js"
                  ]
                }
            }
        ]
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
                "options": {
                    "subjectLength": 50,
                    "bodyLineLength": 72
                },
                "conditions": []
            },
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "/^[\\[][A-Z]*[\\]] [a-zA-Z0-9-. ]*/m"
                }
            }
        ]
    }
}
